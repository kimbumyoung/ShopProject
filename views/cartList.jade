  hr(style={border:'2px solid gray'})
  each list, i in rows
    .row
      .col-sm-1.text-center 
        label=i
      .col-sm-3
        .row.text-center 
          img(src="/images/"+list.mainimage,style={width:'80%',height:'100px'})
        br
        .row
