html
  head
      title orderPage
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
      script(src='https://code.jquery.com/jquery-3.2.1.js', integrity='sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=', crossorigin='anonymous')  
      
      style. 
        #headImg{
          border-bottom : 1px solid #ededed;
        }
        #headTitle{
          border : 4px solid #ededed;
          padding : 10px 20px;
        }
        #headTap {
          border-bottom : 1px solid #ededed;
        }
        #headTap .col-sm-2 img {
          height : 30px;
        }
        .headname {
          color :  #0178d3;
          font-size : 15px;
        }
        th{
           background-color : #ededed;
           text-align : center;
        }
        #trhead{
           border-top : 1px solid #b7b7b7;
        }
        .info {
            padding : 0px 30px;
        }
        .info2{
            padding : 0px 13px;
        }
        .info3{
            padding : 0px 14px;
        }
        td img {
          height : 80px;
          width: 100%;
        }
        #pricetd {
          padding : 3px;
          text-align : right;
        }
        
  
  body(style={margin:'0px',padding:'0px 20px'})
    .row 
      img(src="/images/orderpop_title.png",id='headImg')
    br
    .row#headTitle 
      label.headname [김범영]
      label  님께서
      label
      label 에 주문하신 내역입니다.
    br
    .row#headTap 
      .col-sm-2.text-center
        img(src="/images/orderhead.png", alt="")
    br
    br  
    .row.info
      label.headname 주문자정보 
      br
      br
      .row
        table.table.table-bordered
          #trhead.tr
            th 주문자
            td(colspan=3)
              label #{session.displayname}
          tr
            th 주문일자
            td
              label=orderdate
            th(style={width:'18%'}) 주문서 입금현황
            td
              label 입금완료   
    br
    .row.info
      label.headname 배송지정보 
      br
      br
      .row
        table.table.table-bordered
          #trhead.tr
            th 수취인
            td
              label=rows[0].orderName
            th 송장번호
            td 
              label cj대한통운 697939973753
          tr
            th 연락처
            td
              label=rows[0].orderPhone
            th(style={width:'18%'}) 주소
            td
              label=rows[0].orderAddress 
          tr
            th 배송메세지
            td(colspan=3) 
              label=rows[0].orderMessage
    br
    .row.info2
        label.headname.info3 주문상품정보 
        table.table.table-bordered
          #trhead.tr
            th(style={width:'70%' }) 주문상품정보
            th(style={width:'10%' }) 수량
            th(style={width:'10%' }) 가격
            th(style={width:'10%' }) 처리상태
          for list in rows
            tr
              td(style={width:'70%' })
                .row(style={padding:'0px 5px'}) 
                  .col-sm-2
                    img(src="/images/"+list.mainimage)
                  .col-sm-10
                    label=list.productname
                    br
                    span.glyphicon.glyphicon-play 
                    span.label.label-warning
                      옵션
                    label 색상:
                    label=list.color 
                    label ,사이즈
                    label=list.size
              td(style={width:'10%',padding:'35px 0px' }).text-center 
                label=list.pcount
              td(style={width:'10%',padding:'35px 0px' }).text-center 
                label=list.price
                label 원
              td(style={width:'10%',padding:'35px 0px' }).text-center 
                label 거래완료  
          tr 
            th#pricetd(colspan=4) 
              label 총 상품 구매 금액 = 
              label(style={color:'red'})=rows[0].totalPrice-2500
              label(style={color:'red'}) 원
    br 
    .row.text-center
      button(type="submit",style={height:'40px',width:'30%'}).btn.btn-default 확인완료
    hr(style={border:'2px solid #ededed'})
    
