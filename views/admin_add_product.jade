extends admin_layout

block content
  .row(style={margin:'0px',padding:'10px 60px'})
      form(method="post", action="/admin/add_product" , enctype="multipart/form-data")
        input(type="text",name="productname" placeholder="상품명")
        input(type="text",name="content", placeholder="상품설명(10자)")
        .input-group.image-preview
        input.form-control.image-preview-filename(placeholder='', type='text', disabled='disabled',id='mainimageBar')
        span.input-group-btn
          .btn.btn-default.image-preview-input
            span.glyphicon.glyphicon-folder-open
            span.image-preview-input-title Browse
            input(type='file', accept='image/png, image/jpeg, image/gif',id='mainimage',name='mainimage')
        div
          .panel.panel-warning
            .panel-heading
              h4 색상 선택
            .list-group
              .list-group-item
                label
                  input#Black(name='color', type='checkbox', value='black')
                  |  검은색
              .list-group-item
                label
                  input#brown(name='color', type='checkbox', value='brown')
                  |  브라운
              .list-group-item
                label
                  input#red(name='color', type='checkbox', value='red')
                  |  빨간색
              .list-group-item
                label
                  input#green(name='color', type='checkbox', value='green')
                  |  초록색
        input(type="text",name="price",placeholder="판매가격")
        .input-group.image-preview
        input.form-control.image-preview-filename(placeholder='', type='text', disabled='disabled',id='contentimageBar')
        span.input-group-btn
          .btn.btn-default.image-preview-input
            span.glyphicon.glyphicon-folder-open
            span.image-preview-input-title Browse
            input(type='file', accept='image/png, image/jpeg, image/gif',id='contentimage',name='contentimage')
        select(name='category')
          option(value='t-shirt') 티셔츠
          option(value='pants') 바지
        br
        input(type="submit" value="전송")
        //- button#submitBtn.btn.btn-primary(type='button', style='width:50%') 등록
    script.
       $(document).ready(function(){
          
          $('#mainimage').change(function(){
            $('#mainimageBar').val( $(this).val());
          });
          $('#contentimage').change(function(){
            $('#contentimageBar').val( $(this).val());
          });
          
       });
    
