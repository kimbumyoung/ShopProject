doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.2.1.js', integrity='sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=', crossorigin='anonymous')  

    style.  
       #box{
        position: absolute;
        width: 500px;
        height: 300px;
        left: 50%;
        top: 50%;
        margin-top: -250px;
        border: 1px solid black;
        background: white;
        z-index: 3;
       }
       .container {
       border : 1px solid black;
       margin : 0px;
       }
       .row {
        border : 0px solid red;
        padding : 0px;
       }
      
       input{
        margin-bottom : 5px;
        width: 100%;
    
       }
       #main_container{
          height: 1000px;
       }
       body{
          margin: 0px;
          padding : 0px;
       }
       #leftTap{
           padding: 40px;
           background-color: #353535;
           height: 100%;
           color: white;
       }
       #leftTap a{
          color: white;
       }
       #rightTap{
          margin:0px;
       }
    
  body
    #main_container.row
      #leftTap.col-sm-3
        .row
          a(href="/")
             h1 B'STORE
        .row
          .col-sm-3
            - if (typeof locals.session.username == 'undefined')
                a(href= '/local/login') LOGIN
            - else 
                a(href= '/local/logout') LOGOUT
          .col-sm-3
            a(href= '/local/signUp') SIGN UP
          .col-sm-3
            a(href= '/order') ORDER
          .col-sm-3
            a(href= '/myPage') MYPAGE
        .row
          input(type="text" name="search")
        .row
          p CATEGORY
        .row

      #rightTap.col-sm-9
        block content
