          height : 150px;
          text-align : center;
       }
       input{
        margin-bottom : 5px;
        width: 100%;
       }
       body {
        margin : 0px;
        padding : 0px 7px;
       }
       .borderbottom{
        border-bottom : 1px solid #c3c5c9;
       }
       hr {
        border : 2px solid #ededed;
        width : 80%;
       }
       .circle {
         border-radius: 50%;
         width: 130px;
         height: 130px; 
         color : white;
         padding-top : 30%;
         text-align : center;
       }
